<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <Spinner
        android:id="@+id/spinnerPositionOnBar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/canTheyClimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:text="@string/canTheyClimb"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noCanTheyClimb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="28dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/canTheyClimb"
        app:layout_constraintTop_toTopOf="@+id/yesCanTheyClimb" />

    <Button
        android:id="@+id/yesCanTheyClimb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/canTheyClimb"
        app:layout_constraintTop_toBottomOf="@+id/canTheyClimb" />

    <TextView
        android:id="@+id/moveOnBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/typicalHighestRung"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPositionOnBar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/positionOnBar"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="@+id/canTheyClimb"
        app:layout_constraintTop_toBottomOf="@+id/yesCanTheyClimb" />

    <TextView
        android:id="@+id/centerClimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:text="@string/climbTime"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toEndOf="@+id/canTheyClimb"
        app:layout_constraintTop_toTopOf="@+id/canTheyClimb" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/ifNoClimb"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="@+id/centerClimb"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <EditText
        android:id="@+id/editText_climbHeight"
        android:layout_width="530dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editText_climbHeight2"
        android:layout_width="306dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/centerClimb"
        app:layout_constraintTop_toBottomOf="@+id/centerClimb" />

    <Spinner
        android:id="@+id/spinnerTypicalHighestRung"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/moveOnBar"
        app:layout_constraintTop_toBottomOf="@+id/moveOnBar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seconds"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/editText_climbHeight2"
        app:layout_constraintTop_toTopOf="@+id/editText_climbHeight2" />

    <View
        android:id="@+id/divider6"
        android:layout_width="5dp"
        android:layout_height="798dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/editText_climbHeight"
        app:layout_constraintStart_toEndOf="@+id/moveOnBar"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>